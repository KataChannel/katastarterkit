# Environment Variables Template
# Copy this file to .env and update the values

# Application
NODE_ENV=development
PORT=12001
FRONTEND_URL=http://localhost:12000

# Database Configuration
DATABASE_URL="postgresql://postgres:postgres@localhost:12003/rausachcore"
POSTGRES_DB=rausachcore
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_PORT=12003

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=12004
REDIS_PASSWORD=your-redis-password

# JWT Authentication
JWT_SECRET=your-jwt-secret-change-in-production
JWT_EXPIRES_IN=7d

# Minio Object Storage
MINIO_ENDPOINT=localhost
MINIO_PORT=12007
MINIO_ACCESS_KEY=your-minio-access-key
MINIO_SECRET_KEY=your-minio-secret-key
MINIO_USE_SSL=false
MINIO_BUCKET_NAME=uploads

# NextAuth.js
NEXTAUTH_SECRET=your-nextauth-secret-change-in-production
NEXTAUTH_URL=http://localhost:12000

# Next.js Frontend
NEXT_PUBLIC_APP_URL=http://localhost:12000
NEXT_PUBLIC_GRAPHQL_ENDPOINT=http://localhost:12001/graphql

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id

# ============================================
# Support Chat System Configuration
# ============================================

# Google Gemini API (for AI Assistant)
# Get your API key from: https://aistudio.google.com/app/apikey
GOOGLE_GEMINI_API_KEY=your-gemini-api-key-here

# OpenAI API (Optional - alternative to Gemini)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Zalo OA Integration (Optional - for Zalo chat integration)
# Register at: https://developers.zalo.me/
ZALO_APP_ID=
ZALO_APP_SECRET=
ZALO_OA_ID=
ZALO_WEBHOOK_SECRET=

# Facebook Messenger Integration (Optional - for Facebook chat integration)
# Register at: https://developers.facebook.com/
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=
FACEBOOK_PAGE_ACCESS_TOKEN=
FACEBOOK_VERIFY_TOKEN=

# ============================================
# Invoice API Configuration (Optional)
# ============================================

# SSL Certificate Verification
INVOICE_SSL_VERIFICATION=false
INVOICE_API_TIMEOUT=30000
INVOICE_API_BASE_URL=https://hoadondientu.gdt.gov.vn:30000
INVOICE_BRANDNAME=

# Rate Limiting Configuration
INVOICE_BATCH_SIZE=5
INVOICE_DELAY_BETWEEN_BATCHES=2000
INVOICE_DELAY_BETWEEN_DETAIL_CALLS=500
INVOICE_MAX_RETRIES=3

# Bearer Token for Invoice API
INVOICE_BEARER_TOKEN=your-invoice-bearer-token-here
