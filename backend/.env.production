# Production Environment Variables for Backend
# These override .env values during production deployment

# Application
NODE_ENV=production
PORT=4000

# Frontend URL - internal Docker network communication
# When backend is in Docker container, use Docker service name instead of localhost
FRONTEND_URL=http://frontend:3000

# Database Configuration - Docker internal URL
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/rausachcore
DOCKER_DATABASE_URL=postgresql://postgres:postgres@postgres:5432/rausachcore

# Redis Configuration - Docker internal URL
REDIS_HOST=redis
REDIS_PORT=6379

# Elasticsearch Configuration - Docker internal URL
ELASTICSEARCH_URL=http://elasticsearch:9200

# Minio Configuration - Docker internal URL
MINIO_ENDPOINT=minio
MINIO_PORT=9000

# JWT
JWT_SECRET=11112222333344445555666677778888
JWT_EXPIRES_IN=7d

# Minio
MINIO_ACCESS_KEY=rausachcore-admin
MINIO_SECRET_KEY=rausachcore-secret-2025
MINIO_USE_SSL=false
MINIO_BUCKET_NAME=uploads
