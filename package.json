{
  "name": "innerv2-nextjs-fullstack",
  "version": "2.0.0",
  "description": "Modern Next.js 15 Fullstack Starter Kit with Prisma + Redis + MinIO + TailwindCSS v4",
  "private": true,
  "workspaces": [
    "frontend"
  ],
  "scripts": {
    "dev": "cd frontend && bun run dev",
    "dev:turbo": "cd frontend && bun run dev:turbo",
    "build": "cd frontend && bun run build",
    "start": "cd frontend && bun run start",
    "test": "cd frontend && bun test",
    "lint": "cd frontend && bun run lint",
    "lint:fix": "cd frontend && bun run lint --fix",
    "format": "prettier --write \"frontend/**/*.{js,jsx,ts,tsx,json,md}\"",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "setup": "bun install && cd frontend && bun install",
    "clean": "rm -rf node_modules frontend/node_modules bun.lockb frontend/bun.lockb",
    "db:generate": "cd frontend && bunx prisma generate",
    "db:migrate": "cd frontend && bunx prisma migrate dev",
    "db:reset": "cd frontend && bunx prisma migrate reset",
    "db:seed": "cd frontend && bunx prisma db seed",
    "db:studio": "cd frontend && bunx prisma studio",
    "db:push": "cd frontend && bunx prisma db push"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2"
  },
  "engines": {
    "bun": ">=1.1.0",
    "node": ">=20.0.0"
  },
  "keywords": [
    "nextjs",
    "fullstack",
    "typescript",
    "starter-kit",
    "prisma",
    "postgresql",
    "redis",
    "minio",
    "docker",
    "tailwindcss",
    "server-actions",
    "app-router",
    "react-19",
    "nextjs-15"
  ],
  "author": "KataChannel",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/KataChannel/katastarterkit.git"
  },
  "homepage": "https://github.com/KataChannel/katastarterkit#readme",
  "bugs": {
    "url": "https://github.com/KataChannel/katastarterkit/issues"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "frontend/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "frontend/**/*.{json,md}": [
      "prettier --write"
    ]
  }
}
