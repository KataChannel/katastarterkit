{
  "name": "timonacore",
  "version": "1.1.0",
  "description": "Enterprise Fullstack Starter Kit with Next.js + NestJS + GraphQL + Prisma + Redis + Minio",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"bun run dev:backend\" \"bun run dev:frontend\"",
    "dev:backend": "cd backend && bun run dev",
    "dev:frontend": "cd frontend && bun run dev",
    "build": "bun run build:backend && bun run build:frontend",
    "build:backend": "cd backend && bun run build",
    "build:frontend": "cd frontend && bun run build",
    "test": "bun run test:backend && bun run test:frontend",
    "test:backend": "cd backend && bun test",
    "test:frontend": "cd frontend && bun test",
    "lint": "bun run lint:backend && bun run lint:frontend",
    "lint:backend": "cd backend && bun run lint",
    "lint:frontend": "cd frontend && bun run lint",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "docker:dev": "docker-compose up -d",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up -d",
    "docker:down": "docker-compose down",
    "setup": "bun install && cd backend && bun install && cd ../frontend && bun install",
    "clean": "rm -rf node_modules backend/node_modules frontend/node_modules bun.lockb backend/bun.lockb frontend/bun.lockb",
    "db:migrate": "cd backend && bunx prisma migrate dev",
    "db:seed": "cd backend && bunx prisma db seed",
    "db:studio": "cd backend && bunx prisma studio"
  },
  "devDependencies": {
    "concurrently": "^9.0.1",
    "prettier": "^3.3.3",
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "@typescript-eslint/parser": "^8.8.0",
    "eslint": "^9.11.1",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0",
    "bun": ">=1.1.34"
  },
  "keywords": [
    "bun",
    "bunjs",
    "fullstack",
    "typescript",
    "starter-kit",
    "nextjs",
    "nestjs",
    "graphql",
    "prisma",
    "postgresql",
    "redis",
    "minio",
    "docker",
    "tailwindcss",
    "apollo",
    "enterprise",
    "modern",
    "fast"
  ],
  "author": "Timonacore Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/KataChannel/katastarterkit.git"
  },
  "homepage": "https://github.com/KataChannel/katastarterkit#readme",
  "bugs": {
    "url": "https://github.com/KataChannel/katastarterkit/issues"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
