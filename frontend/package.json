{
  "name": "katacore-frontend",
  "version": "1.0.0",
  "description": "Modern Frontend with Next.js 15, React 19, TailwindCSS v4, and GraphQL",
  "private": true,
  "scripts": {
    "dev": "next dev -p 13000",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test": "bun test",
    "test:e2e": "cypress open",
    "test:e2e:headless": "cypress run",
    "test:e2e:ci": "bun run build && bun run start & cypress run --headless --browser chrome",
    "test:e2e:dev": "bun run dev & cypress open",
    "test:all": "bun run type-check && bun run lint && bun run test && bun run test:e2e:headless",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\""
  },
  "dependencies": {
    "@apollo/client": "^3.11.0",
    "@headlessui/react": "^2.2.7",
    "@heroicons/react": "^2.2.0",
    "@hookform/resolvers": "^5.2.1",
    "@tailwindcss/postcss": "^4.1.12",
    "axios": "^1.11.0",
    "date-fns": "^4.1.0",
    "graphql": "^16.11.0",
    "graphql-ws": "^6.0.6",
    "next": "15.5.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-dropzone": "^14.3.8",
    "react-hook-form": "^7.62.0",
    "react-hot-toast": "^2.6.0",
    "yup": "^1.7.0",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@cypress/code-coverage": "^3.14.6",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/addon-links": "^9.1.3",
    "@storybook/addon-onboarding": "^9.1.3",
    "@storybook/blocks": "^8.6.14",
    "@storybook/nextjs": "^9.1.3",
    "@storybook/react": "^9.1.3",
    "@storybook/test": "^8.6.14",
    "@tailwindcss/forms": "^0.5.0",
    "@testing-library/cypress": "^10.0.3",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.11",
    "@types/react-dom": "^19.1.7",
    "autoprefixer": "^10.4.21",
    "cypress": "^15.0.0",
    "eslint": "^9.34.0",
    "eslint-config-next": "15.5.0",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "postcss": "^8.5.6",
    "storybook": "^9.1.3",
    "tailwindcss": "^4.1.12",
    "typescript": "^5.9.2"
  }
}
