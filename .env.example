# Environment Variables Template
# Copy this file to .env and update the values

# Application
NODE_ENV=development
PORT=14000
FRONTEND_URL=http://localhost:13000

# Database Configuration
DATABASE_URL="postgresql://postgres:postgres@localhost:15432/katacore"
# Docker Database Configuration
POSTGRES_DB=katacore
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_PORT=15432
# Docker internal database URL (used by backend service in docker)
DOCKER_DATABASE_URL="postgresql://postgres:postgres@postgres:5432/katacore"

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=16379
REDIS_PASSWORD=123456
# Docker Redis Configuration (used by backend service in docker)
DOCKER_REDIS_HOST=redis

# JWT Authentication
JWT_SECRET=11112222333344445555666677778888
JWT_EXPIRES_IN=7d

# Minio Object Storage
MINIO_ENDPOINT=localhost
MINIO_PORT=19001
MINIO_ACCESS_KEY=katacore-admin
MINIO_SECRET_KEY=katacore-secret-2025
MINIO_USE_SSL=false
MINIO_BUCKET_NAME=uploads
# Docker Minio Configuration (used by backend service in docker)
DOCKER_MINIO_ENDPOINT=minio

# NextAuth.js
NEXTAUTH_SECRET=your-nextauth-secret-change-in-production
NEXTAUTH_URL=http://localhost:13000

# Next.js Frontend
NEXT_PUBLIC_APP_URL=http://localhost:13000
NEXT_PUBLIC_GRAPHQL_ENDPOINT=http://localhost:14000/graphql

# Monitoring
GRAFANA_PASSWORD=admin

# Production only
DOMAIN=yourdomain.com
SSL_EMAIL=your-email@domain.com

# Docker Container Names (configurable)
POSTGRES_CONTAINER_NAME=katacore-postgres
REDIS_CONTAINER_NAME=katacore-redis
MINIO_CONTAINER_NAME=katacore-minio
BACKEND_CONTAINER_NAME=katacore-backend
FRONTEND_CONTAINER_NAME=katacore-frontend

# Docker Network
DOCKER_NETWORK_NAME=katacore-network

# Docker Image Tags (for production builds)
POSTGRES_IMAGE=postgres:16-alpine
REDIS_IMAGE=redis:7.4-alpine
MINIO_IMAGE=minio/minio:RELEASE.2025-07-23T15-54-02Z
